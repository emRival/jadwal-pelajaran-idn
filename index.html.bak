                    continue;
                }

                bodyHtml += `<tr><td class="time-col">${slot.time}</td><td class="time-col jp-col">${slot.jp}</td>`;
                for (let dayIndex = 1; dayIndex <= 5; dayIndex++) {
                    for (const className of classColumns) {
                        const schedule = scheduleData.find(
                            (s) =>
                                s.day == dayIndex &&
                                s.jp == slot.jp &&
