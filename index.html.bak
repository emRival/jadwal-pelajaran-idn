                            const code = details ? details.code : "N/A";
                            bodyHtml += `<td class="mapel-${category}"><strong>${code}</strong></td>`;
                        } else {
                            bodyHtml += `<td>-</td>`;
                        }
                    }
                }
                bodyHtml += `</tr>`;
            }
            bodyHtml += "</tbody>";

            return `<table class="full-schedule-table">${headerHtml}${bodyHtml}</table>`;
        }

